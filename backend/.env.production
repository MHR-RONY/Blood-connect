# Production Environment Variables for Heroku
# Add these to your Heroku Config Vars

# MongoDB Connection (use MongoDB Atlas for production)
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/bloodconnect?retryWrites=true&w=majority

# JWT Secret (generate a strong secret)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Frontend URL
FRONTEND_URL=https://bloodconnect.mhrrony.com

# Node Environment
NODE_ENV=production

# Port (Heroku will set this automatically)
PORT=3001

# API Base URL (your custom domain)
API_BASE_URL=https://api.bloodconnect.mhrrony.com
